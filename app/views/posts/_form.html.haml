= simple_form_for @post do |f|
	= f.association :post_category, label: "Select the type of post you are writing", include_blank: false
	= f.input :content
	= f.input :lat, as: :hidden
	= f.input :lng, as: :hidden
	= f.input :photo_ids, as: :hidden
	= f.input :audio_ids, as: :hidden
	= f.input :video_ids, as: :hidden
